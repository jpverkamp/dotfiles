{
  "global": {
    "link": {
      "ssh": "~/.ssh",
      "gitconfig": "~/.gitconfig",
      "bin": "~/.bin",
      "vimrc": "~/.vimrc",
      "emacs.d": "~/.emacs.d",
      "zshrc": "~/.zshrc",
      "zsh.d": "~/.zsh.d",
      "tmux.conf": "~/.tmux.conf",
      "diceware.ini": "~/.diceware.ini"
    },
    "decrypt": [
      "~/.ssh/config.aes"
    ]
  },
  "os=darwin": {
    "init": [
      "ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\"",
      "brew install python3 the-silver-searcher tmux zsh reattach-to-user-namespace",
      "chsh -s /bin/zsh",
      "defaults write -g ApplePressAndHoldEnabled -bool false",
      "pip3 install diceware"
    ]
  },
  "os=linux": {
    "init": [
      "sudo apt-get install git python3 python3-pip silversearcher-ag zsh",
      "chsh -s /bin/zsh"
    ]
  }
}
