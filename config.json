{
  "global": {
    "link": {
      "ssh": "~/.ssh",
      "gitconfig": "~/.gitconfig",
      "bin": "~/.bin",
      "vimrc": "~/.vimrc",
      "emacs.d": "~/.emacs.d",
      "zshrc": "~/.zshrc",
      "zsh.d": "~/.zsh.d",
      "tmux.conf": "~/.tmux.conf",
      "diceware.ini": "~/.diceware.ini"
    },
    "decrypt": [
      "~/.ssh/config.aes"
    ]
  },
  "os=darwin": {
    "copy": {
      "osx-settings/com.googlecode.iterm2.plist": "~/Library/Preferences/com.googlecode.iterm2.plist"
    },
    "init": [
      "ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\"",
      "brew install python3 ag tmux zsh reattach-to-user-namespace bat lsd dust duf procs",
      "chsh -s /bin/zsh",
      "defaults write -g ApplePressAndHoldEnabled -bool false",
      "pip3 install diceware",
      "brew tap homebrew/cask-fonts",
      "brew install font-hack-nerd-font"
    ]
  },
  "os=linux": {
    "init": [
      "sudo apt-get install git python3 python3-pip silversearcher-ag bat tldr fish",
      "sudo snap install lsd dust duf-utility procs",
      "sudo ln -s $(which batcat) /usr/bin/bat",
      "chsh -s /bin/zsh"
    ]
  }
}
